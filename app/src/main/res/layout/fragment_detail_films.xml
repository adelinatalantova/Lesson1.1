<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail_films.DetailFilmsFragment">

    <View
        android:layout_width="5dp"
        android:layout_height="180dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Название:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_iv" />

    <TextView
        android:id="@+id/name_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название:"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/original_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/name_film"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Оригинальное название:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/original_name_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Оригинальное название:"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/original_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/original_name_film"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Длительность:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/time_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Длительность:"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/time_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/time_film"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Дата релиза:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/date_of_release_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата релиза:"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/date_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/producer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/date_of_release_film"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Продюсер:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/producer_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Продюсер:"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/producer_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/director_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/producer_film"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Директор:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/director_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Продюсер:"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/director_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/director_film"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Описание:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/description_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание:"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/description_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>